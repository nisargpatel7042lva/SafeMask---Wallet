{
  "expo": {
    "name": "SafeMask",
    "slug": "SafeMask",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "userInterfaceStyle": "light",
    "scheme": "safemask",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.kartikvyas.SafeMask",
      "supportsTablet": true,
      "associatedDomains": ["applinks:safemask.app"],
      "infoPlist": {
        "NSCameraUsageDescription": "Allow SafeMask to use the camera for QR code scanning",
        "NSLocationWhenInUseUsageDescription": "Allow SafeMask to access your location for mesh network features"
      }
    },
    "android": {
      "package": "com.kartikvyas.SafeMask",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "safemask"
            },
            {
              "scheme": "https",
              "host": "safemask.app",
              "pathPrefix": "/send"
            },
            {
              "scheme": "https",
              "host": "safemask.app",
              "pathPrefix": "/pay"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/appicon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
